.HowWorks
  display grid
  background-color #FFF
  padding 2rem 0
  &-content
    width 100%
    box-sizing border-box
  &-video
    margin-top 1rem
    width 100%
    box-shadow 0 2px 12px 0 rgba(198, 202, 206, 0.4)
    +from-width($xl)
      width 771px
      margin 2em auto 0 auto
  &-step
    margin-top 3rem
    &-content
      &-figure
        margin 0 auto
        width 100%
        user-select none
        +from-width($xl)
          width 1000px
        +from-width($xxl)
          width 1100px
        img
          width 100%
  &-pricing
    display grid
    justify-items center
    margin-top 25px
    padding-left 2em
    grid-gap 1rem
    border-radius 8px
    user-select none
    +from-width($sm)
      padding-left 9em
    +from-width($md)
      margin-top 4rem
      grid-template-columns 1fr 1fr 1fr
      grid-gap 1rem
      padding-left 0
      justify-items flex-start
      box-shadow 0 2px 12px 0 rgba(198, 202, 206, 0.4)
      padding 1rem
    &-element
      display grid
      grid-template-columns 35px 5fr
      grid-gap .5em
      justify-self flex-start
      +from-width($md)
        justify-self unset
        grid-template-columns 100px 4fr
      &-icon
        justify-self center
        align-self center
        font-size 20px
        color $green
        +from-width($sm)
          font-size 30px
      &-details
        display grid
        grid-gap .5em
      &-title
        color $dark-blue
        font-size 18px
        font-weight bold
        +from-width($sm)
          font-size 20px
      &-dollarPrice
        line-height 1.05
        color $dark-blue
        font-size 22px
        font-weight bold
        +from-width($sm)
          font-size 34px
      &-symbol
        line-height 1.05
        color $green
        font-size 22px
        +from-width($sm)
          font-size 44px
      &-btcPrice
        color $dark-gray
        line-height 1.64
