.SmartHero
  background #e9f7ff
  padding 125px 0 25px 0
  overflow hidden
  +from-width($sm)
    padding 125px 0
  +from-width($md)
    padding 120px 0
  &-content
    display grid
    +from-width($sm)
      grid-template-columns 1fr 1fr
    &-left
      &-title
        margin 0
        font-size 22px
        font-family $primary-font
        color $dark-blue
        +from-width($md)
          font-size 44px
      &-description
        margin-top 20px
        margin-bottom 20px
        line-height 1.65
        color $dark-gray
        font-size 15px
        +from-width($sm)
          margin-top 41px
          margin-bottom 34px
    &-right
      display none
      +from-width($sm)
        display block
        position relative
      &-figure
        z-index 0
        +from-width($sm)
          position absolute
          top 7rem
          left -25rem
          width 750px
        +from-width($md)
          top 8.5rem
          left -21rem
        +from-width($xl)
          top 2.8rem
          left -21rem
          width 880px
        +from-width($xxl)
          top -10.4rem
          left -30rem
          width 1200px
        img
          width 100%
  &-btns
    display grid
    margin-top 50px
    grid-gap 1em
    +from-width($xl)
      grid-template-columns 1fr 1fr
      margin-top 100px
