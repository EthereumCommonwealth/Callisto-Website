.OrderAuditModal
  overflow hidden
  &-holder
    border-radius 8px
    height 75vh
    overflow scroll
    +from-width($sm)
      height 85vh
      padding 40px 50px
  &-title
    text-align center
    font-size 22px
    color $dark-blue
    line-height 1.41
    font-weight 500
    +from-width($sm)
      font-size 30px
  &-form
    overflow hidden
    &-title
      font-size 18px
      color $dark-blue
      line-height 1.52
      margin .5em 0 .5em 0
    &-inputs
      display grid
      grid-gap 14px
      label
        color $dark-gray
        line-height 1.64
      textarea
        border-radius 4px
        border-color #e5e5e5
        min-height 90px
        padding .5em
        resize vertical
        &:focus
          outline none
          border-color $dark-gray
      input
        border-radius 4px
        border solid 1px #e5e5e5
        padding .5em
        &:focus
          outline none
          border-color $dark-gray
      &.checkbox
        display flex
        align-items center
        justify-content flex-start
        margin-bottom 1rem
        label
          margin-left 1rem
  &-submit
    margin-top 20px
    border none
    &:focus
      outline none
  &-success
    border-radius 8px
    padding 20px
    &-message
      margin 1em 0
      color $green
      font-size 22px
  &-platforms
    position relative
    &:hover
      cursor pointer
    &-selected
      border solid 1px #e5e5e5
      border-radius 4px
      padding .5em
      display block
    &-elements
      border solid 1px #e5e5e5
      border-radius 4px
      position absolute
      background #FFF
      max-height 120px
      overflow scroll
      a
        display block
        color $dark-gray
        padding .5em
        &:hover
          background-color rgba(229, 229, 229, 0.3)
