.Header
  background #FFF
  padding 1em
  position fixed
  width 100%
  box-sizing border-box
  z-index 2
  box-shadow 0 0 14px 0 rgba(198,202,206,0.3)
  &-content
    display flex
    justify-content space-between
    align-items center
    padding 0
  &-figure
    +from-width($md)
      width 150px
    +from-width($xxl)
      width auto
    img
      +from-width($md)
        width 150px
      +from-width($xxl)
        width auto
  &-logo
    &-mobile
      +from-width($sm)
        display none
    &-desktop
      display none
      +from-width($sm)
        display block
  &-menu
    &-mobile
      +from-width($md)
        display none
      &-icon
        color $green
        font-size 2em
      &-content
        position fixed
        width 100%
        height 100%
        top 0
        left 0
        padding 1em
        background-color rgba(255, 255, 255, 0.56)
        box-sizing border-box
        animation fadeInFromNone 150ms ease-out
        +from-width($md)
          display none
        &-square
          border-radius 8px
          background-color $white
          padding 30px
        &-top
          display grid
          grid-template-columns 1fr 1fr
          align-items center
          .Header-menu-mobile
            justify-self flex-end
        &-middle
          padding 0
          margin 0
          list-style none
          .Header-menu-content-target
            width 100%
            padding .5em
            display block
            font-size 18px
            line-height 1.05
            font-weight 300
        &-bottom
          margin-top 40px
          text-align center
          &-copy
            font-size 12px
            line-height 1.41
            color $dark-gray
            font-weight 200
    &-content
      list-style none
      padding 0
      margin 0
      display none
      +from-width($md)
        display flex
        align-items center
      &-target
        line-height 1.05
        color $dark-gray
        text-decoration none
        transition all 250ms ease
        user-select none
        padding 1em 5px
        +from-width($md)
          font-size 1em
          padding 1em 13px
        &:hover
          color $green
          cursor pointer

.noScroll
  overflow hidden !important
  height 100%
  width 100%
  position fixed
  +from-width($md)
    overflow scroll !important
    position relative

@keyframes fadeInFromNone
  0%
    display none
    opacity 0

  1%
    display block
    opacity 0

  100%
    display block
    opacity 1
