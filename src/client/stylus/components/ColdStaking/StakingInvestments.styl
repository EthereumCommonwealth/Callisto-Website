.StakingInvestments
  padding 35px 0
  background-color #FFF
  +from-width($sm)
    padding 0 0 70px 0
  &-holder
    display grid
    +from-width($sm)
      grid-template-columns 2fr 8fr 2fr
  &-percent
    &-title
      line-height 1.64
      color $dark-blue
      text-align center
      margin-top 25px
      +from-width($sm)
        margin-top 45px
    &-holder
      margin-top 40px
      display grid
      grid-template-columns 1fr 10fr 1fr
      user-select none
      grid-gap 1em
      +from-width($sm)
        margin-top 80px
      &-text
        font-size 18px
        line-height 1.64
        color $light-gray
        justify-self center
      &-line
        align-self center
        background-color #e5e5e5
        width 100%
        height .5em
        border-radius 12px
        position relative
        &-progress
          position absolute
          left 0
          background-color #c0f5df
          height .5em
          border-radius 12px
        &-circle
          width 2em
          height 2em
          background-color $green
          position absolute
          border-radius 100%
          top -12px
          &:hover
            cursor pointer
        &-percentage
          position absolute
          top -40px
          font-size 20px
          color #c4c4c4
          min-width fit-content
          +from-width($md)
            top -60px
            font-size 36px
          &-value
            color $green
  &-deposit
    margin-top 20px
    display grid
    justify-content center
    justify-items center
    grid-gap 1em
    +from-width($md)
      margin-top 40px
      grid-gap 1.5em
    &-title
      line-height 1.64
      color $dark-blue
    &-input
      border none
      border-bottom solid 2px $dark-blue
      color $green
      font-size 18px
      text-align center
      +from-width($md)
        font-size 36px
      &:focus
        outline none
  &-table
    display grid
    width 100%
    margin 30px auto 0 auto
    border-radius 8px
    overflow hidden
    box-shadow 0 4px 14px 0 rgba(198, 202, 206, 0.3)
    background-color #FFF
    +from-width($md)
      width 570px
      margin 60px auto 0 auto
    &-row
      padding 1.5em
      background-color #FFF
      display grid
      grid-template-columns 4fr 1fr 1fr
      justify-self center
      width 100%
      box-sizing border-box
      grid-gap 1.5em
      &-text
        font-size 18px
        line-height 1.52
        color $dark-blue
        +from-width($md)
          font-size 20px
      &.is-head
        background-color $white
        justify-self flex-start
        &-text
          line-height 1.64
          color $dark-gray
  &-description
    margin-top 20px
    line-height 1.52
    font-size 14px
    text-align center
    color $dark-gray
    width 100%
    +from-width($md)
      width 570px
      margin 40px auto 0 auto
