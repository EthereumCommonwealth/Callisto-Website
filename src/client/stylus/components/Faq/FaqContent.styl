.FaqContent
  padding 100px 0 25px 0
  background-color #FFF
  user-select none
  +from-width($sm)
    padding 70px 0
  &-content
    display grid
    grid-gap 1em
    +from-width($sm)
      grid-gap 2em
      grid-template-columns 3fr 9fr
  &-elements
    &-title
      font-size 22px
      color $dark-blue
      margin 0
      +from-width($sm)
        font-size 44px
    &-subtitle
      color $dark-gray
      line-height 1.64
      margin-top 1em
      margin-bottom 2.5em
      display block
      +from-width($sm)
        margin-top 2em
        margin-bottom 5em
      a
        color $orange
.FaqCategory
  margin-bottom 40px
  &:hover
    cursor pointer
  +from-width($sm)
    margin-bottom 80px
  &-title
    &-text
      color $dark-gray
      font-size 20px
      line-height 1.52

.FaqArticle
  border-bottom solid 1px #f2f2f2
  padding 2em 0
  margin-bottom 1em
  &-top, &-bottom
    display grid
    grid-template-columns 1fr 11fr
    grid-gap 1em
    align-items center
    &:hover
      cursor pointer
    &-elem
      justify-self flex-start
      color $green
      font-size 28px
      +from-width($sm)
        font-size 36px
  &-title
    margin 0
    font-size 20px
    color $dark-blue
    font-weight 500
    line-height 1.41
    +from-width($sm)
      font-size 26px
  &-description
    padding-top 2em
    line-height 1.64
    color $dark-blue
