.FinantialHero
  background #FFF
  padding 100px 0 25px 0
  +from-width($sm)
    padding 45px 0
  +from-width($md)
    padding 120px 0
  &-content
    display grid
    +from-width($sm)
      grid-template-columns 1.5fr 2fr
    &-left
      &-title
        margin 0
        font-size 22px
        font-family $primary-font
        color $dark-blue
        +from-width($md)
          font-size 44px
      &-description
        margin-top 20px
        margin-bottom 20px
        line-height 1.65
        color $dark-gray
        font-size 15px
        +from-width($sm)
          margin-top 41px
          margin-bottom 34px
    &-right
      display none
      +from-width($sm)
        display block
        position relative
      &-figure
        z-index 0
        +from-width($sm)
          position absolute
          top 50px
          width 75%
          right -25px
        +from-width($md)
          position absolute
          top -90px
          width 100%
        img
          width 100%
