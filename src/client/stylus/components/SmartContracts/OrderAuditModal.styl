.OrderAuditModal
  overflow hidden
  &-holder
    border-radius 8px
    height 75vh
    overflow scroll
    +from-width($sm)
      height 85vh
      padding 40px 50px
  &-title
    text-align center
    font-size 22px
    color $dark-blue
    line-height 1.41
    font-weight 500
    +from-width($sm)
      font-size 30px
  &-form
    overflow hidden
    &-title
      font-size 18px
      color $dark-blue
      line-height 1.52
      margin .5em 0 .5em 0
    &-inputs
      display grid
      grid-gap 14px
      label
        color $dark-gray
        line-height 1.64
      textarea
        border-radius 4px
        border-color #e5e5e5
        min-height 90px
        padding .5em
        resize vertical
        &:focus
          outline none
          border-color $dark-gray
      input
        border-radius 4px
        border solid 1px #e5e5e5
        padding .5em
        &:focus
          outline none
          border-color $dark-gray
  &-submit
    margin-top 20px
    border none
    &:focus
      outline none
  &-success
    border-radius 8px
    padding 20px
    &-message
      margin 1em 0
      color $green
      font-size 22px
