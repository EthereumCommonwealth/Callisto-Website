.SmartHero
  background #FFF
  padding 125px 0 25px 0
  +from-width($sm)
    padding 125px 0
  +from-width($md)
    padding 275px 0 120px 0
  &-content
    display grid
    +from-width($sm)
      grid-template-columns 1.5fr 2fr
    &-left
      &-title
        margin 0
        font-size 22px
        font-family $primary-font
        color $dark-blue
        +from-width($md)
          font-size 44px
      &-description
        margin-top 20px
        margin-bottom 20px
        line-height 1.65
        color $dark-gray
        font-size 15px
        +from-width($sm)
          margin-top 41px
          margin-bottom 34px
    &-right
      display none
      +from-width($sm)
        display block
        position relative
      &-figure
        z-index 0
        +from-width($sm)
          position absolute
          top 50px
          left -65px
          width 400px
        +from-width($md)
          top 50px
          left -65px
          width 500px
        +from-width($xl)
          top -14px
          left -150px
          width 680px
        +from-width($xxl)
          top -111px
          left -120px
          width 800px
        img
          width 100%
  &-btns
    display grid
    margin-top 50px
    grid-gap 1em
    +from-width($xl)
      grid-template-columns 1fr 1fr
      margin-top 100px
