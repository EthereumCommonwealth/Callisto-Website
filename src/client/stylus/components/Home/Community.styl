.Community
  padding 40px 0
  background-color #FFF
  +from-width($sm)
    padding 80px 0
  &-list
    display grid
    grid-template-columns repeat(2, 1fr)
    justify-items center
    grid-gap 15px
    padding-top 1em
    +from-width($sm)
      grid-gap 30px
      grid-template-columns repeat(4, 1fr)
      padding-top 2em
    +from-width($md)
      grid-template-columns repeat(7, 1fr)
    &-element
      color $light-gray
      text-decoration none
      display grid
      grid-gap 18px
      justify-items center
      transition all 150ms ease
      &:hover
        color $green
        .Community-list-element-text
          color $green
      i
        font-size 2em
        +from-width($sm)
          font-size 4em
      &-text
        color $dark-gray
        font-size 1em
        line-height 1.64
        transition all 150ms ease
