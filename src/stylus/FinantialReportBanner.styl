.FinantialReportBanner
  background-color $lavender
  padding 1em 0
  +from-width($md)
    padding 3em 0
  &-wrapper
    display flex
    flex-direction column
    align-items center
    justify-content center
    +from-width($md)
      flex-direction row
  &-title
    font-size 28px
    color #fff
    margin 0
    color $white
  &-anchor
    display block
    padding .5em 2em
    border-radius 5px
    text-decoration none
    background $primary-color
    color $white
    transition all 350ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
    margin-top 1em
    +from-width($md)
      margin-top 0
      margin-left 2em
