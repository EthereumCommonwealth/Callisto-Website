.Exchanges
  padding 2em 1em !important
  background-color $white
  &-title
    font-family $secondary-font
    margin 0
    font-size 28px
    color $dark
  &-subtitle
    font-size 1em
    color $dark
  &-list
    display grid
    grid-gap 1em
    +from-width($sm)
      grid-template-columns 1fr 1fr
    +from-width($md)
      grid-template-columns 1fr 1fr 1fr 1fr
    &-element
      border-radius 4px
      text-align center
      color $white
      font-weight 600
      text-decoration none
      position relative
      display flex
      justify-content center
      &-anchor
        position absolute
        width 100%
        height 100%
        top 0
        left 0
      &-figure
        height 100px
        align-self center
        display grid
        justify-content center
        img
          align-self center
          height 100%
        &.is-small
          height 65px
        &.is-dark
          background $dark
          padding .5em
          box-sizing border-box
          max-width 250px
          +from-width($sm)
            height 100%
          img
            width 100%
