.PoolSupport
  padding 2em 1em !important
  &-title
    font-family $secondary-font
    margin 0
    font-size 28px
    margin-bottom 1em
  &-list
    display grid
    grid-template-columns 1fr
    grid-gap 1em
    +from-width($sm)
      grid-template-columns 1fr 1fr
    +from-width($md)
      grid-template-columns 1fr 1fr 1fr 1fr
    &-element
      background-color $yellow
      padding 1em
      border-radius 4px
      box-shadow 0 14px 14px 0 rgba(29, 53, 77, 0.06)
      text-align center
      color $white
      font-weight 600
      text-decoration none
      position relative
      &-anchor
        position absolute
        width 100%
        height 100%
        top 0
        left 0
