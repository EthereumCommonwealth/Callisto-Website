.SmartHero
  background #FFF
  padding 100px 0 25px 0
  +from-width($sm)
    padding 45px 0
  +from-width($md)
    padding 120px 0
  &-content
    display grid
    +from-width($sm)
      grid-template-columns 1.5fr 2fr
    &-left
      &-title
        margin 0
        font-size 22px
        font-family $primary-font
        color $dark-blue
        +from-width($md)
          font-size 44px
      &-description
        margin-top 20px
        margin-bottom 20px
        line-height 1.65
        color $dark-gray
        font-size 15px
        +from-width($sm)
          margin-top 41px
          margin-bottom 34px
    &-right
      display none
      +from-width($md)
        display block
        position relative
      &-figure
        position absolute
        top -111px
        left -120px
        width 800px
        z-index 0
        img
          width 100%
  &-btns
    display grid
    margin-top 50px
    grid-gap 1em
    +from-width($md)
      grid-template-columns 1fr 1fr
      margin-top 100px
